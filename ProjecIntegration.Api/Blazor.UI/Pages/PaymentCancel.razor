@page "/paymentcancel"
@using Blazor.UI.Data.Services.CartService
@inject ICartService cartService;

<PageTitle>Payment Cancel</PageTitle>

<div class="container text-center">
    <div class="row justify-content-center">
        <div class="col-md-5 m-2 p-2">
            <div class="failed shadow-sm">
                <div class="">
                <h2 class="">Payment Cancel</h2>
                    <i class="bi bi-x-circle-fill"></i>
                <br />
                <h4 class="m-2 p-2">votre payment a bien été annulé </h4>
                </div>
            </div>
        </div>
    </div>
</div>
@code {
    protected override async Task OnInitializedAsync()
    {
        await cartService.EmptyCart();
    }
}
