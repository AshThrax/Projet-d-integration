@page "/manager"
@attribute [Authorize]
@attribute [StreamRendering]
@using Blazor.UI.Client.Page.Comp
@using Blazor.UI.Client.Page.sallePage
@using Blazor.UI.Client.Page
@inject NavigationManager manager;
<div class="bg-light  m-4 p-2 rounded-2 text-center">
    <h3 class="display-4 ">Manager</h3>
    
</div>
<ul class="nav nav-tabs">
    <li class="nav-item">
        <button type="button" class="btn btn-primary nav-link" @onclick="() => GetToComplexeSection()">Manage Complexes</button>
    </li>
    <li class ="nav-item">
        <button type="button" class="btn btn-primary nav-link" @onclick="() => GetToPieceSection()">Manage Salle/Pieces</button>
    </li>
    <li class="nav-item">
        <button type="button" class="btn btn-primary nav-link" @onclick="() => GetToRepresentationSection()">Manage Salle/Representations</button>
    </li>
    <li class="nav-item">
        <button type="button" class="btn btn-primary nav-link" @onclick="() => GetToSalleSection()">Manage Complexe/Salles</button>
    </li>
   
</ul>
<br />
<div class="jumbotron">
    <p>Bienvenu administrateur </p> 
</div>

@code
{

    public void GetToComplexeSection()
    {
        manager.NavigateTo("manager/complexe");
    }

    public void GetToPieceSection()
    {
        manager.NavigateTo("manager/piece");
    }

    public void GetToRepresentationSection()
    {
        manager.NavigateTo("manager/representation");
    }

    public void GetToSalleSection()
    {
        manager.NavigateTo("manager/salle");
    }
   
}
